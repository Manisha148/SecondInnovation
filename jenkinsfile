pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                echo "hi"
                
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "hello"
            }
        }
    }
}
