node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }
    

    stage('Build image') {
        
  
       app = docker.build("manishaverma/deployrepo")
    }
    


    stage('Test image') {
  

        app.inside {
            sh 'echo "Tests passed"'
        }
    }

    stage('Push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
            app.push("${env.BUILD_NUMBER}")
        }
     }
    stage('deploy'){
        sh 'docker run -p 3000:5000 -e OPENAI_API_KEY="${OPENAI_API_KEY}" manishaverma/deployrepo:latest'
    }


}
