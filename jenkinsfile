node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }
    

    stage('Build image') {
        
  
       app = docker.build("manishaverma/deployrepo")
    }
    


    stage('Test image') {
  

        app.inside {
            sh 'echo "Tests passed"'
        }
    }

stage('Push image to ECR') {
            steps {
                script {
                    withCredentials([awsEcr(serverUrl: "https://${ECR_REGISTRY}", region: "${AWS_REGION}", credentialsId: "aws-ecr-creds")]) {
                        docker.withRegistry("https://${ECR_REGISTRY}", 'ecr') {
                            def ecrImage = docker.image("pythonflask")
                            ecrImage.push("${ECR_REPO}:${env.BUILD_NUMBER}")
                            ecrImage.push("${ECR_REPO}:latest")
                        }
                    }
                }
            }

        }
     }
    //stage('deploy'){
    //    sh 'docker run -it -d -p 8888:8888 -e OPENAI_API_KEY="${OPENAI_API_KEY}" manishaverma/deployrepo:latest'
    //}
    stage('Trigger ManifestUpdate') {
                echo "triggering manifestupdate"
                build job: 'manifestupdate', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
        }

}
