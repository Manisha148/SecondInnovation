node {
    def app

    stage('Clone repository') {
      

        checkout scm
    }
    

    stage('Build image') {
        
  
       app = docker.build("manishaverma/secondinnovation")
    }
    


    stage('Test image') {
  

        app.inside {
            sh 'echo "Tests passed"'
        }
    }

    stage('Push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
            app.push
        }
     }
    //stage('deploy'){
    //    sh 'docker run -it -d -p 8888:8888 -e OPENAI_API_KEY="${OPENAI_API_KEY}" manishaverma/secondinnovation:latest'
    //}
    stage('Trigger ManifestUpdate') {
                echo "triggering manifestupdate"
                build job: 'manifestupdate', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
        }

}
