pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('CREDS') {
            steps {
                withCredentials([string(credentialsId: 'Api_openAI', variable: 'API_KEY')]) {
                sh 'docker build --build-arg API_KEY=API_KEY -t finalflaskApp .'
                }
        }
        }

        stage('Test') {
            steps {
                echo "hi"
                
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "hello"
            }
        }
    }
}
